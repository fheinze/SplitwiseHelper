{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "server/dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "splitwise": ["src/declarations/splitwise"]
    }
  },
  "include": ["src/**/*", "src/index.ts"]
}
